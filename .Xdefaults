xterm*faceName: Inconsolata for Powerline
xterm*font: Inconsolata for Powerline
xterm.VT100.renderFont: true
xterm.VT100.faceSize:10
xterm*cursorBlink: true
xterm*geometry: 70x20

! The amount that I can scroll up
xterm*saveLines: 2000

! double-click to select whole URLs :D
xterm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48


!! Colors !!

xterm*background: #3F3F3F
xterm*foreground: #D9C2B4

!!  Display utf8 symbols
xterm*utf8: 1

!! Color Settings
!! Scheme is:  base16-eighties.dark.sh
!black
*color0:     #2d2d2d
*color8:     #747369
!red
*color1:     #f2777a
*color9:     #f2777a
!green
*color2:     #99cc99
*color10:    #99cc99
!yellow
*color3:     #ffcc66
*color11:    #ffcc66
!blue
*color4:     #6699cc
*color12:    #6699cc
!magenta
*color5:     #cc99cc
*color13:    #cc99cc
!cyan
*color6:     #66cccc
*color14:    #66cccc
!white
*color7:     #d3d0c8
*color15:    #f2f0ec

*color16:    #f2f0ec
*color17:    #d27b53
*color18:    #393939
*color19:    #515151
*color20:    #a09f93
*color21:    #e8e6df


!This is for native transparency:

URxvt.depth: 32
URxvt.background: [50]#313131

URxvt*.transparent: false
URxvt*shading: 20
URxvt*fadeColor: #000000
URxvt*fading: 10

URxvt*font: xft:Inconsolata\ for\ Powerline:pixelsize=15:antialias=true:hinting=true

URxvt*boldFont: xft:Inconsolata\ for\ Powerline:style=bold:antialias=true:pixelsize=15:hinting=true

URxvt*italicFont: xft:Inconsolata\ for\ Powerline:style=italic:antialias=true:pixelsize=15:hinting=true

URxvt*boldItalicFont: xft:Inconsolata\ for\ Powerline:style=bolditalic:antialias=true:pixelsize=15:hinting=true

! Size of my terminal
URxvt.geometry: 79x24


! Scroll bars are lame
Urxvt*scrollBar:        false

! For wee-chat URLs
Urxvt*urlLauncher:      /usr/bin/chromium
URxvt.url-select.underline: true

URxvt.imLocale: pt_en_US.utf8

! Amount that I can scroll up
URxvt*saveLines: 2000

! Add color to my man pages:
URxvt.colorIT: #87af5f
URxvt.colorBD: #d7dfdf
URxvt.colorUL: #87afdf
