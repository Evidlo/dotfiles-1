!URxvt.foreground:   base05
!URxvt.background:   base00
!URxvt.cursorColor:  base05
!URxvt.color0:       base00
!URxvt.color1:       base08
!URxvt.color2:       base0B
!URxvt.color3:       base0A
!URxvt.color4:       base0D
!URxvt.color5:       base0E
!URxvt.color6:       base0C
!URxvt.color7:       base05
!URxvt.color8:       base03
!URxvt.color9:       base09
!URxvt.color10:      base01
!URxvt.color11:      base02
!URxvt.color12:      base04
!URxvt.color13:      base06
!URxvt.color14:      base0F
!URxvt.color15:      base07

! Scroll bars are lame
URxvt.scrollBar: false

!This is for native transparency:

URxvt.depth: 32
URxvt.background: [50]#313131
URxvt.foreground: #D9C2B4

URxvt.transparent: false
URxvt.shading: 20
URxvt.fadeColor: #000000
URxvt.fading: 10

URxvt.font: xft:Inconsolata\ for\ Powerline:pixelsize=15:antialias=true:hinting=true

URxvt.boldFont: xft:Inconsolata\ for\ Powerline:style=bold:antialias=true:pixelsize=15:hinting=true

URxvt.italicFont: xft:Inconsolata\ for\ Powerline:style=italic:antialias=true:pixelsize=15:hinting=true

URxvt.boldItalicFont: xft:Inconsolata\ for\ Powerline:style=bolditalic:antialias=true:pixelsize=15:hinting=true

! Size of my terminal
URxvt.geometry: 79x24

URxvt.imLocale: pt_en_US.utf8

! Amount that I can scroll up
URxvt.saveLines: 2000

! Add color to my man pages:
!URxvt.colorIT: #87af5f
!URxvt.colorBD: #d7dfdf
!URxvt.colorUL: #87afdf
